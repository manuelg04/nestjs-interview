generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Employee {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  payType    String
  payRate    Float
  timesheets Timesheet[]
}

model Timesheet {
  id           Int      @id @default(autoincrement())
  employeeId   Int
  date         DateTime
  hoursWorked  Int?
  grossWage    Float
  checkDate    DateTime
  employee     Employee @relation(fields: [employeeId], references: [id])
  status       String
  notes        String?
}

model adminUser {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
}
